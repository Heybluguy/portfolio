<%= button_to "Logout", logout_path, method: :get %>
<%= button_to "Portfolio", root_path, method: :get %>
<%= button_to "Add new project", new_project_path, method: :get %>

<table>
  <tr>
    <th>Name</th>
    <th>Active?</th>
    <th><i class="material-icons">edit</i></th>
  </tr>
  <% @projects.each do |project| %>
  <tr>
    <td><%= project.name %></td>
    <td><%= project.active %></td>
    <td><%= button_to "Edit", edit_project_path(project.id), method: :get %></td>
  </tr>
  <% end %>
</table>
